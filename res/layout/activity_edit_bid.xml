<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" >
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Создание новой заявки"
                    android:id="@+id/textView" android:layout_gravity="left|center_vertical"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Тема задачи:"
                    android:id="@+id/textView1" android:layout_gravity="left|center_vertical"/>
            <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etTema" android:layout_gravity="left|center_vertical"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Номер аудитории:"
                    android:id="@+id/textView2"/>
            <Spinner
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spNumAud" android:layout_gravity="center" android:spinnerMode="dropdown"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Текст заявки:"
                    android:id="@+id/textView3" android:layout_gravity="center"/>
            <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etTextBid" android:layout_gravity="left|center_vertical"/>
            <TextView
                    android:layout_width="772dp"
                    android:layout_height="wrap_content"
                    android:text="Источник ПО:"
                    android:id="@+id/textView4" android:layout_gravity="left|center_vertical"/>
            <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etPO" android:layout_gravity="left|center_vertical"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Название ПО:"
                    android:id="@+id/textView5" android:layout_gravity="left|center_vertical"/>
            <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etNamePO" android:layout_gravity="left|center_vertical"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Сетевой или инвентарный номер:"
                    android:id="@+id/textView6" android:layout_gravity="left|center_vertical"/>
            <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etSeti"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Рабочее место:"
                    android:id="@+id/textView7"/>
            <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etWorkstation"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>