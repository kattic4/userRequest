<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AutorizationActivity" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Имя пользователя" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="50dp"
        android:text="Пароль" />

    <EditText
        android:id="@+id/nameUs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView2"
        android:ems="10" />

    <requestFocus />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText2"
        android:layout_marginLeft="13dp"
        android:orientation="vertical" >
    </LinearLayout>

    <EditText
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:ems="10"
        android:inputType="textPassword" >
    </EditText>

    <Button
        android:id="@+id/btnSynch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Войти" android:layout_alignLeft="@+id/textView2" android:layout_below="@+id/pass"/>


    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Регистрация"
            android:id="@+id/btnReg2"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/btnSynch"
            android:layout_alignLeft="@+id/textView2" android:layout_below="@+id/fio"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/result" android:layout_below="@+id/btnReg2" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginTop="83dp"
            android:layout_alignRight="@+id/btnReg2" android:layout_alignEnd="@+id/btnReg2"/>
    <EditText
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:id="@+id/fio"
            android:layout_alignLeft="@+id/textView2" android:layout_below="@+id/textView"
            android:layout_alignRight="@+id/nameUs"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Введите ФИО для регистрации:"
            android:id="@+id/textView" android:layout_alignLeft="@+id/textView2" android:layout_below="@+id/btnSynch"
            android:layout_alignRight="@+id/nameUs"/>


</RelativeLayout>